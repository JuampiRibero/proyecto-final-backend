{{#if response.founded}}
  <h2>Detalle de Producto</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nombre</th>
        <th scope="col">Detalle</th>
        <th scope="col">Precio</th>
        <th scope="col">Imagen</th>
        <th scope="col">Cantidad</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{{response.productsFinded.id}}</td>
        <td>{{response.productsFinded.title}}</td>
        <td>{{response.productsFinded.description}}</td>
        <td>{{response.productsFinded.price}}</td>
        <td><img
            class="img-fluid"
            width="80px"
            src=""
            alt="Imagen de {{response.productsFinded.title}}"
            srcset="{{response.productsFinded.thumbnail}}"
          />
        </td>
        <td>
          <button
            class="btn btn-primary btn-rest"
            onclick="restQuantity('{{response.productsFinded.id}}')"
          >- </button>
          <span
            id={{response.productsFinded.id}}
            class="quantity-product"
          >0</span>
          <button
            class="btn btn-primary btn-add"
            onclick="addQuantity('{{response.productsFinded.id}}')"
          >+ </button>
        </td>
      </tr>
    </tbody>
  </table>
  <button class="btn btn-primary" onclick="addProducts()">
    Agregar al Carrito
  </button>
{{else}}
  <div class="container alert alert-danger p-3">
    <h2 class="text-danger text-center">Â¡Producto no encontrado!</h2>
  </div>
{{/if}}